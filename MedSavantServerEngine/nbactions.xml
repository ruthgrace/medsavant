<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>package</goal>
                <goal>exec:exec</goal>
            </goals>
            <properties>
                <exec.args>-Djava.rmi.transport.tcp.readTimeout=28800000 -Djava.rmi.server.hostname=localhost  -Dmedsavant.version=1.1-SNAPSHOT -classpath %classpath org.ut.biolab.medsavant.server.MedSavantServerEngine -c config -jar ${project.build.directory}/${project.build.finalName}.jar</exec.args>
                <exec.workingdir>/home/jim/medsavant_server</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>package</goal>
                <goal>exec:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Djava.rmi.transport.tcp.readTimeout=28800000 -Djava.rmi.server.hostname=localhost  -Dmedsavant.version=1.1-SNAPSHOT -classpath %classpath org.ut.biolab.medsavant.server.MedSavantServerEngine -c config -jar ${project.build.directory}/${project.build.finalName}.jar</exec.args>
                <jpda.listen>true</jpda.listen>
                <exec.workingdir>/home/jim/medsavant_server</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Djava.rmi.transport.tcp.readTimeout=28800000 -Djava.rmi.server.hostname=localhost  -Dmedsavant.version=1.1-SNAPSHOT -classpath %classpath org.ut.biolab.medsavant.server.MedSavantServerEngine -c config -jar ${project.build.directory}/${project.build.finalName}.jar</exec.args>
                <exec.executable>${profiler.java}</exec.executable>
                <exec.workingdir>/home/jim/medsavant_server</exec.workingdir>
            </properties>
        </action>
    </actions>
